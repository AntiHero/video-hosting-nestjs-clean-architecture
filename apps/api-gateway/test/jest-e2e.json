{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^apps/api-gateway/src/(.*)": "<rootDir>/../src/$1",
    "^@app/common/(.*)": "<rootDir>/../../../libs/common/$1"
  }
}
